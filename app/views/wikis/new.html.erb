<h1 align="center">New wiki</h1>

<div class="row" align="center">
  <div class="col-md-4">
    <ul style="list-style: none;">
      <p>Guidelines for wikis</p>
      <li>Be Creative</li>
      <li>Make the Wiki Useful</li>
      <li>The incessant use of hashtags will get you banned.</li>
    </ul>
  </div>
  <div class="col-md-4">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div></br>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
